@model IEnumerable<RejOsobZaginionych.Models.Osoba>

@if (!Request.IsAuthenticated)
{
    <p>
        @Html.ActionLink("Zaloguj się", "Login", "Account", null, new { @class = "btn btn-primary" })
        @Html.ActionLink("Zarejestruj się", "Register", "Account", null, new { @class = "btn btn-secondary" })
    </p>
}
else
{
    <p>Jesteś zalogowany jako: @User.Identity.Name</p>
}

@{
    ViewBag.Title = "Index";
}

<h2>Rejestr Osób Zaginionych</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Imie)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nazwisko)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataZaginiecia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Plec)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Imie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nazwisko)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataZaginiecia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Plec)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
